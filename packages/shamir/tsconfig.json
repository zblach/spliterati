{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    "allowUnusedLabels": true,
    "noImplicitAny": false
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "./src/**/*.test.ts",
  ],
}
